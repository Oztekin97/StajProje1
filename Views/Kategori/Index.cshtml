@using StajProje1.Models.Entity
@model List<KATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Kategori", FormMethod.Get))
{
    <p>
        <b>Aranacak Kategori Adı:</b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <td>Kategori Id</td>
        <td>Kategori Ad</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>
    <tbody>
        @foreach (var ktg in Model)
        {
            <tr>
                <td>@ktg.KATEGORIID</td>
                <td>@ktg.KATEGORIAD</td>
                <td><a href="/KATEGORI/SIL/@ktg.KATEGORIID" class="btn btn-danger">Sil</a></td>
                <td><a href="/KATEGORI/GUNCELLE/@ktg.KATEGORIID" class="btn btn-success">Guncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/KATEGORI/EKLE/" class="btn btn-primary">Kategori Ekle</a>
