@model StajProje1.Models.Entity.SATIS
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>SATIŞ SAYFASI</h2>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Satış Yap
</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Satış Yapma Ekranı</h2>
                <form method="post" action="/Satislar/YeniSatis">
                    <div class="modal-body">
                        <label>Ürün ID:</label>
                        @Html.TextBoxFor(m => m.URUN, new { @class = "form-control" })
                        <br />
                        <label>Müşteri ID:</label>
                        @Html.TextBoxFor(m => m.MUSTERI, new { @class = "form-control" })
                        <br />
                        <label>Adet:</label>
                        @Html.TextBoxFor(m => m.ADET, new { @class = "form-control" })
                        <br />
                        <label>Fiyat:</label>
                        @Html.TextBoxFor(m => m.FIYAT, new { @class = "form-control" })
                        <br />
                        <br />
                        <button type="submit" class="btn btn-info">Verileri Kaydet</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
