@using StajProje1.Models.Entity
@model List<URUN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p>
        <b>Aranacak Urun Adı:</b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <td>Urun Id</td>
        <td>Urun Ad</td>
        <td>Marka</td>
        <td>Kategori</td>
        <td>Fiyat</td>
        <td>Stok</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <td>@urun.URUNID</td>
                <td>@urun.URUNAD</td>
                <td>@urun.MARKA</td>
                <td>@urun.KATEGORI.KATEGORIAD</td>
                <td>@urun.FIYAT</td>
                <td>@urun.STOK</td>
                <td><a href="/URUN/SIL/@urun.URUNID" class="btn btn-danger">Sil</a></td>
                <td><a href="/URUN/GUNCELLE/@urun.URUNID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/URUN/EKLE/" class="btn btn-primary">Ürün Ekle</a>
